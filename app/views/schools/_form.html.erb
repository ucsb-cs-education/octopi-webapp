<%= simple_form_for(@school) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :readonly => (not can? :change_school_name, @school )%>
    <%= f.input :ip_range %>
    <%= f.input :student_remote_access_allowed %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
