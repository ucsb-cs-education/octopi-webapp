<%= simple_form_for :school, url: schools_path, method: 'get' do |f| %>
    <div class="form-inputs">
      <%= f.input :id, include_blank: false, collection: @accessible_schools, selected: @school.id, label: 'Select a different school to administer' %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, 'Switch schools' %>
    </div>
<% end %>
