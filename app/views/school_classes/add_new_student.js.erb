<% if @student.errors.empty? %>
$(function() {
    $("#classlist").append('<%= j render partial: 'student_table_row', locals: {student: @student} %>');
    $("#new_student").addClass("hidden");
    $("#new_student_button").removeClass("hidden");
    $('#new_student').find('form')[0].reset()
});
<% else %>
$(function() {
    $('#new_student').html("<%= j render 'new_student_form' %>");
});
<% end %>