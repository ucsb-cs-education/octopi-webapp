<p>
  <strong>Name:</strong>
  <%= @school_class.name %>
</p>


<%= simple_form_for :student, url: school_school_class_add_student_path(@school.id,@school_class.id) , method:'post' do |f| %>
    <div class="form-inputs">
      <%= f.input :id, collection: @school.students-@school_class.students, include_blank: true, selected:0 %>
    </div>
    <div class="form-actions">
    <%= f.button :submit, 'Add student to class'%>
    </div>
<% end %>

<p>Students in class</p>
<table>
  <td><strong>Student Name</strong></td><td><strong>Login Name</strong></td>
<% @school_class.students.each do |s| %>
    <tr>
        <td><%= s.name %></td>
      <td><%= s.login_name %></td>

    </tr>
<%end%>
 </table>


<p>
  <%= link_to 'Back', school_school_classes_path %>
</p>

