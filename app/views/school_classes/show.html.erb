      <script> function addStudent() {
          var login = document.getElementById("login").value;

      }
      </script>
    </div>
  </div>
</div>
<%= simple_form_for :student, url: school_class_add_student_path(@school_class.id) , method:'post' do |f| %>
    <div class="form-inputs">
      <%= f.input :id, collection: @school_class.school.students-@school_class.students, include_blank: true, selected:0, label:"Add student to class:" %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, 'Add student to class'%>
    </div>
<% end %>
