<% provide(:title, 'Your classes') %>
<h1>Your Classes</h1>
<% @schools.each do |school| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= link_to school[:name], schools_path(school[:id]) %>
        <label>School Admins: </label>
        <% school[:admins].each do |staff| %>
            (<%= staff.name %>)
        <% end %>
      </div>
      <div class="panel-body">
        <% school[:classes].each do |school_class| %>
            <p>
              <%= link_to school_class.name, school_class_path(school_class) %>
              <label>Teachers: </label>
              <% school_class.teachers.each do |staff| %>
                  (<%= staff.name %>)
              <% end %>
            </p>
        <% end %>
      </div>
    </div>
<% end %>
