<body <%= content_for?(:body_attributes) ? yield(:body_attributes) : '' %>>
<%= render 'header' %>
<%= content_for?(:pre_container) ? yield(:pre_container) : '' %>
<div class="container">
  <%= breadcrumbs pretext: 'You are here: ', autoroot: false, style: :bootstrap %>
  <div class="flashes">
    <%= render 'flashes' %>
  </div>
  <div id="main-body" class="<%= controller_classes %>">
    <%= yield %>
  </div>
  <%= render 'footer' %>
  <%= render 'application/admin_panel' if current_staff && current_staff.super_staff? %>
  <%= debug(params) if Rails.env.development? %>
</div>
</body>

