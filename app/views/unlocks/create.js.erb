<% if @unlock.unlockable_type == "Page" %>
$("#activity_<%= @unlock.unlockable_id%>_student_<%=@unlock.student_id %>").replaceWith(
        "<%= j render partial:"school_classes_activities/activity_status", locals: {activity: @unlock.unlockable, student: @unlock.student}%>");

<%else%>
$("#task_<%=@unlock.unlockable_id %>_student_<%= @unlock.student_id%>").replaceWith(
        "<%= j render partial:"school_classes_activities/student_status", locals: {task: @unlock.unlockable, student: @unlock.student}%>");
<%end%>