<% provide(:title, "#{@student.school.name} | #{@student.name}") %>
<% breadcrumb :staff_school_student, @student %>
<%= @student.name %>
<% if can? :destroy, @student %>
    <p>
      <%= link_to 'Delete?', student_path, method: :delete,
                  data: {confirm: "You sure?"},
                  title: @student.name %>
    </p>
<% end %>
