panel "History" do
    table_for assigns[:versions].order(:id).reverse do
        column "Version number", :index
        column "User who changed version", :whodunnit
        column "Date Created", :created_at
        column "Restore" do |version|
            link_to "restore", :controller => "laplaya_files", :action=> "restore", :version=> version.id
        end
    end
end

