<div id="select-module">
  <div class="form-group" id="module-list">
    <form id="change-module" action="<%= @module_page.id %>">
      <label for="modules" class="select required control-label">Select a different module</label>
      <select id="modules" class="form-control">
        <%= render partial: "student_portal/pages/module_page/module_options", collection: current_school_class.module_pages, as: :module_page %>
      </select>

      <div class="form-actions">
        <input type="submit" class="btn btn-primary" value="Switch Modules" id="change-module-button">
      </div>
    </form>
  </div>
</div>

<div id="page-title">
  <%= @module_page.title %>
</div>

<div class="student-body">
  <%= @module_page.student_body.html_safe %>
</div>

<div id="children-pages">
  <%= render partial: "student_portal/pages/module_page/children", collection: @module_page.children %>
</div>

<div id="other-links">
  <div id="sandbox-link">
    <img src="broken image" width="100" height="100">
  </div>
  <div id="main-project-link">
    <img src="broken image" width="100" height="100">
    Story Project
  </div>
</div>