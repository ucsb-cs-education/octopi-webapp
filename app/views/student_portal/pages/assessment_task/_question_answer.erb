<div class="answer">
  <div class="input-box">
    <% if question_type == "singleAnswer" %>
        <input class = "answer-input" name = "question_<%= question_id %>_input" type="radio" value = <%=question_answer_counter%>>
    <% else %>
        <input class = "answer-input" name = "question_<%= question_id %>_input" type="checkbox" value = <%=question_answer_counter%>>
    <% end %>
  </div>
  <div class="answer-text">
    <%= question_answer['text'].html_safe %>
  </div>
</div>
