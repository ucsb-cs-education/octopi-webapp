<table>
  <tr>
    <td>
      <div id="choosetype">
        Answer Options:
        <form action="">
          <label for="ansType" class="sr-only">Answer Types</label>
          <select id="ansType">
            <option value="singleAnswer">One Correct</option>
            <option value="multipleAnswers">Multiple Correct</option>
            <option value="freeResponse">Free Response</option>
          </select>
        </form>
      </div>
    </td>
    <td>
      <button <%= 'class="hidden"'.html_safe if @assessment_question.question_type=="freeResponse" %> type="button" id="addAns">
        Add New Answer Choice
      </button>
    </td>
  </tr>
</table>